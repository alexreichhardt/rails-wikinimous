
<% @articles.each do |article| %>
  <div class="card">
  <h3><%=article.title%></h3>
  <p><%=article.content%></p>
  <div class="buttons">
  <%= link_to "Show Article", article_path(article), class: "btn btn-success ", method: :get %>
  <%= link_to "Edit Article", edit_article_path(article), class: "btn btn-primary ", method: :patch %>
  <%= link_to "Delete Article", article_path(article), class: "btn btn-danger ", method: :delete %>
  </div>
  </div>
<%end%>
